    }

    h1 {
      color: #2c3e50;
      margin-bottom: 10px;
    }

    .month-popup {
      font-size: 16px;
      padding: 8px 12px;
      border-radius: 10px;
      margin-bottom: 20px;
      transition: all 0.3s ease;
      border: 1px solid #ccc;
      background: #e8f0fe;
    }

    #calendar {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      gap: 10px;
      text-align: center;
      margin-top: 20px;
    }

    #calendar div {
      padding: 10px;
